<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="IDHEXMobApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:IDHEXMobApp"
    xmlns:views="clr-namespace:IDHEXMobApp.Views">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage"
        Shell.NavBarIsVisible="False" />

    <FlyoutItem Title="Pedidos">
        <Tab>
            <ShellContent
                Title="Pedidos"
                ContentTemplate="{DataTemplate views:PedidosPage}"
                Route="PedidosPage"
                Shell.NavBarIsVisible="True" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Notas">
        <Tab>
            <ShellContent
                Title="Notas"
                ContentTemplate="{DataTemplate views:NotasPage}"
                Route="NotasPage"
                Shell.NavBarIsVisible="True" />
        </Tab>
    </FlyoutItem>
</Shell>